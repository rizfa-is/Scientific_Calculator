<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.istekno.mycalculator">

    <application
        android:name=".di.HistoryInjection"
        android:allowBackup="true"
        android:icon="@mipmap/ic_calculator"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_calculator_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCalculator.NoActionBar">
        <activity android:name=".ui.calculator.CalculatorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>